    }
  },
  "tags": [
    {
      "name": "user",
      "description": "Operations about users"
    },
    {
      "name": "journaling",
      "description": "Operations about journaling"
    }
  ],
  "schemes": [
    "http"
  ],
  "paths": {
    "/user/{userName}": {
      "get": {
        "tags": [
          "user"
        ],
        "summary": "Get information about a user",
        "description": "",
        "operationId": "getUser",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "userName",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "400": {
            "description": "Invalid userName supplied"
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    },
    "/user": {
      "post": {
        "tags": [
          "user"
        ],
        "summary": "Creates a new user",
        "description": "",
        "operationId": "createUser",
        "consumes": [
          "multipart/form-data"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "userName",
            "in": "formData",
            "description": "The unique user name of the user to create",
            "required": true,
            "type": "string"
          },
          {
            "name": "firstName",
            "in": "formData",
            "description": "The first name of the user to create",
            "required": true,
            "type": "string"
          },
          {
            "name": "lastName",
            "in": "formData",
            "description": "The last name of the user to create",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "201": {
            "description": "User created successfully"
          },
          "400": {
            "description": "Parameters malformed"
          },
          "403": {
            "description": "A user with the same userName already exists"
          }
        }
      },
      "put": {
        "tags": [
          "user"
        ],
        "summary": "Update an existing user",
        "description": "Update any parameter except the userName and userId.",
        "operationId": "updateUser",
        "consumes": [
          "multipart/form-data"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "firstName",
            "in": "formData",
            "description": "The new first name of the user to update",
            "required": true,
            "type": "string"
          },
          {
            "name": "lastName",
            "in": "formData",
            "description": "The new last name of the user to update",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "201": {
            "description": "User updated successfully"
          },
          "400": {
            "description": "Parameters malformed"
          },
          "403": {
            "description": "User does not exist"
          }
        }
      },
      "delete": {
        "tags": [
          "user"
        ],
        "summary": "Removes an already existing user",
        "description": "",
        "operationId": "removeUser",
        "consumes": [
          "multipart/form-data"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "userName",
            "in": "formData",
            "description": "The userName of the user to remove",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "User removed successfully"
          },
          "400": {
            "description": "userName malformed"
          },
          "403": {
            "description": "User does not exist"
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "userId": {
          "type": "integer",
          "format": "int64"
        },
        "userName": {
          "type": "string"
        },
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        }
      }
    }
  }
}